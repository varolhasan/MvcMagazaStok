@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3 style="margin-top:30px; margin-left:10px; margin-bottom:30px;"><b>KATEGORİLER LİSTESİ</b></h3>

<form class="form-group" method="post">
    <div style="margin-top:15px;">
        <label>ÜRÜN ADI</label>
        <input type="text" name="URUNAD" class="form-control" required="" maxlength="20" placeholder="Ürün Adı Giriniz" />
    </div>
    <div style="margin-top:15px;">
        <label>MARKA</label>
        <input type="text" name="MARKA" class="form-control" required="" placeholder="Marka giriniz"/>
    </div>
    <div style="margin-top:15px;">
        <label>KATEGORİ SEÇİNİZ</label>
        @Html.DropDownListFor(x => x.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <label>FİYAT</label>
        <input type="text" name="FIYAT" class="form-control" required="" placeholder="Fiyat giriniz"/>
    </div>
    <div style="margin-top:15px;">
        <label>STOK</label>
        <input type="text" name="STOK" class="form-control" required="" placeholder="Stok giriniz"/>
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-primary" id="btn1">Ürün Kaydet</button>
    </div>
</form>
<script>
        $("#btn1").click(function () {
            alert("Ürün Ekleme işlemi başarıyla gerçekleşti.")
        });
</script>
